{
	"ConnectionStrings": {
		"ThaiTuanERP2025Db": "Server=<YOUR_SERVER>; Database=ThaiTuanERP2025; Trusted_Connection=True; TrustServerCertificate=True;"
	},
	"Jwt": {
		"Key": "<SECRET_KEY_FROM_ENV>",
		"Issuer": "ThaiTuanERP2025",
		"Audience": "ThaiTuanERP2025Client",
		"ExpiresInMinutes": "1440"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"FileStorage": {
		"BasePath": "<YOUR_FILE_STORAGE_PATH>",
		"PublicRequestPath": "/files/public",
		"PresignedExpirySeconds": 300
	},
	"TaskReminderExpiry": {
		"Interval": "00:01:00",
		"BatchSize": 500
	}
}
